.centro-negocios
	/* TODO ESTO SE DEBE REEMPLAZAR POR EL MODAL LATERL DE NI */
	.aside-view
		background rgba(0, 0, 0, 0)
		transition all 0.2s ease-in-out
		position fixed
		width 100%
		height 100%
		top 0
		left 0
		z-index 9
		visibility hidden
		.aside-container
			background $white
			box-shadow  -5px 0px 15px 0px rgba(50, 50, 50, 0.3)
			right -100%
			top 0
			transition all 0.5s ease-out
			height 100%
			position absolute
			&__tablet
				width 100%
			&__big
				width 70%
			&__middle
				width 55%
			&__small
				width 40%
			&__header
				background $brand-complementary
				display flex
				flex-direction row
				align-items center
				color $white
				padding 10px 15px
				position absolute
				width 100%
				height 50px
				z-index 2
				h3
					color $white
					margin-bottom 0px
				.close-aside
					a
						color $white
						opacity 0.8
						transition all 0.3s ease-in-out
						i
							color $white
							font-size 30px
						&:hover
							opacity 1
			&__body
				padding 0px 30px
				height calc(100% - 50px)
				overflow-y scroll
				margin-top 50px
				padding-top 20px
				padding-bottom 20px
				&::-webkit-scrollbar
					width 6px
					background $grey-10

				&::-webkit-scrollbar-button
					width 8px
					height 5px
					display none

				&::-webkit-scrollbar-track
					background $grey-10
					border thin solid $grey-10
					box-shadow inset 0 0 6px rgba(0,0,0,0.2)
					//border-radius 2px

				&::-webkit-scrollbar-thumb
					background $brand-complementary
					border-radius 2px
					transition all 0.3s ease-in-out
					&:hover
						background $brand-secondary
					&:window-inactive
						background $grey-10
			&__footer
				display flex
				flex-direction row
				align-items center
				height 65px
				position absolute
				width 100%
				padding 15px
				bottom 0px
		&__animate
			background rgba(0, 0, 0, 0.7)
			visibility visible
			.aside-container
				right 0
