.list-group
	.list-group-item
		background $grey-five
		border-style solid
		border-color $default-color
		border-width 1px 0
		color $color-11
		font 14px $light
		height 47px
		&:hover
			background $color-14
			color $color-11
		&.active
			background-color $color-14
			border-color $default-color
			color $color-11
			&:hover
				background-color $color-14
				border-color $default-color
				color $color-11
			&:focus
				background-color $color-14
				border-color $default-color
				color $color-11