switch_states(state)
	background-color state
.centro-negocios
	/* CSS LEGADO */
	.bch-custom-check
		cursor pointer
		display flex
		flex-direction row
		align-items center
		&.favorite
			div
				border none
				padding-top 0
				height 25px
				width 20px
			i
				display block
				font-size 25px
				top 0
				left 0
				&:before
					content "\f2fc"
	.form-group
		&.big-select
			z-index 3
			margin-bottom 5px !important
			.ui-select-bootstrap
				.btn-default
					background #EEE
			.ui-select-search
				font-size 1.4em !important
	.bch-empresas-paginador
		.ui-select-choices-content
			border 1px solid $grey-50
			font-size 13px
			width 100%
			position relative
			top -73px
	.data_group
		margin-bottom 20px !important
		span
			margin-bottom 0px !important
			color $grey-80 !important
			white-space nowrap !important
			font-size 12px !important
			font-family $regular !important
		p
			margin-bottom 0px !important
			font-size 14px !important
			font-family $regular !important
			color $grey-100 !important
		&--inputs
			label
				font-size 12px !important
				font-family $regular !important
				margin-bottom 0px !important
				color $grey-80 !important
				white-space nowrap !important
			input
				margin-bottom 0px !important
				font-size 12px !important
				font-family $regular !important
		&--modal
			dl
				margin-bottom 0px !important
				dt
					font-size 12px !important
					font-family $regular !important
					margin-bottom 0px !important
					font-weight normal !important
					color $grey-50--lighten !important
					white-space nowrap !important
				dd
					margin-bottom 0px !important
					font-size 14px !important
					font-family $regular !important
	.item-group
		margin-bottom 20px !important
		label
			font-size 12px !important
			font-family $regular !important
			margin-bottom 0px !important
			color $grey-80 !important
			white-space nowrap !important
		p
			margin-bottom 0px !important
			font-size 14px !important
			font-family $regular !important
			text-transform initial !important
	.form-group-btn
		z-index 3
	/* MODIFICAR PARA INPUR CON ICONO (CLICKEABLE) SOBRE EL EN LA ZONA DERECHA */
	.form-group__icon-on-input
		position relative
		input
			padding-right 35px
		i 
			position absolute
			top 8px
			right 10px
			font-size 20px
			color $grey-30
			cursor pointer
	/* FIN CSS LEGADO */
