.modal-comprobante
  .num-comp
    color $grey-two
    font 13px $light
    line-height 120%

  .parrafo-info-comprobante
    padding 20px
  .labels-comprobante
    padding 0
    border-style solid
    border-width 1px
    li
      border-bottom-width 1px
      border-bottom-style solid
      list-style none
      padding 10px
      &:last-child
        border-bottom none
    i
      padding-right 5px
  .glosa-comprobante
    padding 0
    border-width 1px 1px 1px 0
    border-style solid
    li
      border-bottom-width 1px
      border-bottom-style solid
      padding 10px
      list-style none
      &:last-child
        border-bottom none
  .bch-labels
    padding-right 0
  .bch-glosa
    padding-left 0