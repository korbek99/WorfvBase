
@css{
/*
/* Drop-multiselect
/* Juan Vallejos
*/
}
@import '../../../vendor/orion-guideline-personas/stylus/parciales/variables.styl';
@import 'nib'

.drop-multiselect
	background-color $default-color
	border 1px solid $color-13
	border-radius 4px
	cursor pointer
	font-family $light
	position relative
	transition .2s ease all
	width 100%
	&__match
		a
			display block
			height 34px
			padding-left 10px
			padding-right 10px
			padding-top 8px
			text-decoration none
			span
				color $color-12
				font-family Arial
				font-size 12px !important
				&.placeholder
					color $color-13
				&.placeholder-multi
					color $color-13
					font-style italic
			i
				color $color-11
				font-size 14px
				float right
			&:hover
				text-decoration none
	&.open
		border-color $corporative-blue
	&__choises
		absolute left 0 top 100%
		background-color $default-color
		border 1px solid $color-13
		display none
		overflow-y auto
		max-height 160px
		width 100%
		z-index 10
		ul
			margin-bottom 0
			li
				&:hover
					background-color $color-16
		.bch-custom-check
			color $color-12
			display block
			font-size 12px
			font-family Arial
			margin-bottom 0
			padding-left 10px
			padding-right 10px
			padding-top 5px
			padding-bottom 5px
			height auto
			float left
			word-wrap break-word
			width 100%
			clear left
		&.open
			display block
		.multiselect-icono-izquierda
			width 20px
			float left
			position absolute
			height 25px
			z-index 1
			&:hover
				cursor 	auto
		.multiselect-icono-derecha
			width 20px
			text-align center
			position absolute
			right 0px
		&.fixed-height
			min-height 160px
	&__search
		font-size 12px
		border none
		display flex
		padding-left 23px
		padding-right 20px
	.footer-choises
		absolute left 0 bottom -208px
		background-color $default-color
		border 1px solid $color-13
		display none
		width 100%
		z-index 10
		&.open
			display block
	&.drop-multiselect--disabled
		.drop-multiselect__match
			a
				background-color $color-16 !important
				border-color $color-14 !important
				cursor not-allowed
