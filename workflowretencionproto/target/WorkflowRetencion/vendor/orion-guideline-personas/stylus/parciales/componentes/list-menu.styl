.bch-list-menu
	font 14px $light
	ul
		padding 0
		margin 0
		li
			list-style none
			a
				background-color $grey-five
				border-bottom 1px solid $default-color
				display block
				color $grey-two
				min-height 50px
				padding 15px
				&:hover
					background-color $table-dark-grey
					color $grey-two
					& span
						color $default-color
				&:focus
					text-decoration none
				span
					background $grey-four
					color $default-color
	&:first-child
		border-top 1px solid $color-13
