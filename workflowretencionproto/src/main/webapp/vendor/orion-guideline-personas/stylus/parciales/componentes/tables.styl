table
    &.tabla-interactiva
        thead
            tr
                th.actions
                    .listado-header
                        .mensaje-info-tabla
                            padding-right 15px !important
                            p
                                word-break keep-all
    thead
        tr
            th
                cursor pointer
                font-family $regular
                padding 5px
                border-width 0 0 0 1px !important
                border-style solid
                font-size 12px !important
                height 40px
                vertical-align middle !important
                &:first-child
                    border-width 0 !important
                &.actions
                    a
                        i
                            display inline-block !important
    tbody
        tr
            border-bottom-width 1px
            border-bottom-style solid
            transition .2s all linear
            td
                font-family 'Arial' !important
                font-size 12px !important
                height 40px
                padding 5px 10px !important
                vertical-align middle !important
                border none !important
                &:first-child
                    border-left none
                &:last-child
                    border-right none
        .action-table
            position relative
            text-align center
            div
                display none
                position absolute
                right 0
                width 200px
                top 0
                height 100%
                padding 5px
                text-align left
                cursor pointer
            &:hover
                div
                    display block
                    right 0
    &.tabla-sort    
        thead
            tr
                border none
                th
                    &.sort-true
                        position relative
                        &:after
                            absolute right 8px top 11px
                            content "\f3d0"
                            font-family "Ionicons"
                        &.sort-true
                            &:before
                                content "\f104"
                                position absolute
                                absolute bottom -15px left 49%
                                font-size 18px
                                font-family "Ionicons"
                            &.sort-down
                                &:after
                                    content "\f3d0"
                                    font-family "Ionicons"
                            &.sort-up
                                &:after
                                    content "\f3d8"
                                    font-family "Ionicons"
    
    @media print
        font-size 10px!important

    &.tabla-toggle
        border none
        thead
            border none
            tr
                th
                    @media (min-width $bp-tablet) and (max-width: $bp-desktop)
                        font-size 11px
                        i
                            display none
                    .plusicon-circular
                        width 13px
                        height 13px
                        border-radius 50%
                        text-align center
                        margin-right 5px
                        font-size 14px
        tbody
            tr
                td
                    .herramientas-tabla-mov
                        margin-bottom 0
                        i
                        span
                            vertical-align middle
                        span.iconShowRemove
                            display inline-block
                            width 13px
                            height 13px
                            text-align center
                            border-radius 3px
                            cursor pointer
                            i
                                font-size 9px
                                display inline-block
                                vertical-align top
                                line-height 13px
                        .ion-android-checkmark-circle
                        .ion-android-attach
                            font-size 15px
            &.active
                tr
                    td
                        &:first-child
                            border-left none
                        &:last-child
                            border-right none                    
        & > tbody
            & + tbody
                border-top none
        .contenido-oculto
            border-bottom 0
            & > td
                padding 0
            .wrap-cont-movimiento
                padding 10px 15px 15px
                margin 0
                position relative
                &:before
                    width 0 
                    height 0 
                    border-left-width 10px
                    border-left-style solid
                    border-right-width 10px
                    border-right-style solid
                    border-bottom-width 10px
                    border-bottom-style solid
                    display block
                    content ""
                    position absolute
                    left -3px
                    top -15px
                .detalle-movimiento
                    table
                        margin 0
                        tr
                            td
                                border none
                                border-bottom-width 1px
                                border-bottom-style solid
                                height auto
                                padding 10px 15px !important
                                .ion-ios-arrow-right
                                    font-size 14px
                                    margin-right 5px
                            &:last-child
                                td
                                    border-bottom none
                h6
                    margin 0 0 15px 0
                .herramientas-movimiento
                    margin 15px 0 0 0
                    .list-inline
                        margin 0
                        & > li
                            padding-right 10px
                            &:last-child
                                padding-right 0 !important
                        li
                            a
                                .ion-ios-email-outline
                                    font-size 20px
                                    margin-top 2px
                                i
                                    margin-right 3px
                                    font-size 16px
                                    vertical-align middle
                                span
                                    vertical-align middle

    &.table-info
        border none
        tbody
            border none
                    
    .btn-link
        text-decoration none

.table-actions-icons
    font-size 19px
    padding-top 5px

.bch-subtitulo
    clear both
    & > div
        border-bottom-width 1px
        border-bottom-style solid
        margin 15px 0
        padding 0
    h4
        display inline-block
        border-bottom-width 3px
        border-bottom-style solid
        padding 0 15px 8px
        margin-bottom -1px
        font-size 22px
    .table-actions-icons
        padding 0
        .list-inline
            margin 0
        ul
            margin 0
            left -113px
            li
                padding-right 0
                a
                    padding 0 5px 0 8px
                    span
                        &:before
                            font-size 28px
                            vertical-align middle
                &:first-child
                    a
                        border none
        .dropdown-menu
            li
                a
                    font-size 12px

.table-collapse
    margin-bottom 20px
    tr
        td
        th
            i
                font-size 15px
                margin 0 5px
                &.ion-paperclip
                    font-size 20px
            .bch-custom-check
                div
                    i
                        margin 0
                        font-size 11px

    .table
        margin-bottom 0
    .carga-masiva
        tr
            &.header-masivo
                cursor pointer
                border-bottom-width 1px
                border-bottom-style solid
                p
                    i
                        border-width 1px
                        border-style solid
                        border-radius 50%
                        display inline-block
                        width 18px
                        height 18px
                        text-align center
                        line-height 16px
                        font-size 10px
                        transition all ease .3s
                        margin 0 0 0 10px
                        vertical-align top
            .sub-table
                height auto
                max-height 40px
                padding 0 !important
                .table-responsive
                    overflow auto
                    max-height 200px

// ESTILOS DE IMPRESION
@media print
    .table
        page-break-inside auto
        width 99.8%
        border-bottom 1px solid $grey-three !important
        font-size 10px
        thead
            display table-header-group
            border-bottom none !important
            tr
                th
                    -webkit-print-color-adjust exact
                    background $grey-one !important
                    color $default-color !important
                    border 1px solid $grey-three !important
                    text-shadow none !important
                    font-family arial
                    padding-top 0
                    print-color-adjust exact
        tbody
            tr
                page-break-inside avoid
                page-break-after auto
            td
                border 1px solid $grey-three !important
                height 25px !important
                padding 4px !important
                padding-top 0
                &:last-child
                    border-right solid 1px $grey-three

    .table-responsive
        overflow-x visible

//Fix Tabla TEF
.tabla-toggle
    &.toggle-2
        tr
            td
                border none
        .contenido-oculto
            > td
                padding 0 10px !important