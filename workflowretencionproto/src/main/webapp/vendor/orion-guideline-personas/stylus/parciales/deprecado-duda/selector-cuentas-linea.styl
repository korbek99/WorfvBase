.selector-cuentas-linea
	margin 20px 0 25px
	button
		color $grey-two
		margin-top -18px
		position absolute
		top 50%
		margin-left 0
		left 100%
		i
			margin-right 3px
			font-size 17px
			border-right-width 1px
			border-right-style solid
			padding 3px 5px 3px 0
			display inline-block
			vertical-align middle
	ul
		border-right-width 1px
		border-right-style solid
		margin-bottom 0
		p
			font 15px $regular
			margin-bottom 3px
			overflow hidden
			text-overflow ellipsis
			white-space nowrap
			width 99%