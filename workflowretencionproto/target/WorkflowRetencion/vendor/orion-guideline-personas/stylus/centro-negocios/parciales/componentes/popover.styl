.centro-negocios
	.popover
		.popover-content
			background-color $white
			color $grey-one
		&.bottom
			.arrow
				&:after
					border-bottom-color $white
		&.right
			.arrow
				&:after
					border-right-color $white
		&.top
			.arrow
				&:after
					border-top-color $white
		&.left
			.arrow
				&:after
					border-left-color $white