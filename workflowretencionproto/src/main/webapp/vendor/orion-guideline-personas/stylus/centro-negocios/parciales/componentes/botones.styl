.centro-negocios
	/* SWITCH */
	.label-ck-button
		padding-left 0px
	.ck-button-simulation
		display flex
		flex-direction row
		width 100%
		justify-content space-between
		align-items center
		margin-bottom 15px
		border 1px solid $grey-10
		border-radius 3px
		label
			width 50%
			margin 0px
			background $white
			display flex
			flex-direction row
			flex-grow 2
			span
				text-align center
				font-size 11px
				font-family $regular
				white-space nowrap
				flex-grow 2
				transition all 0.3s ease-in-out
				height 34px
				color $grey-50
				padding-top 9px
				text-transform initial
				box-shadow 0 1px 10px 0px #eaeaea
				background $white
			span:hover
				color $brand-secondary
				background $white
				cursor pointer
			input
				display none
		input
			&:checked
				& + span
					color $brand-secondary
					box-shadow inset 0 0 30px 0 #efefef
					cursor default
					background $white
					position relative
					&:before
						content ''
						position absolute
						width 50px
						height 5px
						background $brand-secondary
						border-top-left-radius 4px
						border-top-right-radius 4px
						bottom 0px
						left calc(50% - 25px)
	.ck-button.choices
		span
			padding 9px
			font-size 12px
			width 92px
	/* FIN SWITCH */

	/* CSS LEGADO (SE MANTIENE PARA QUE VISTAS ANTIGUAS NO SE ROMPAN, PERO EN NUEVAS VISTAS NO SE DEBE OCUPAR) */ 
	.btn		
		&.btn-primary
			&--error
				background-color $error
				border 1px solid $error
				&:focus
				&:active
				&:hover
					background-color $error - 10%
					border 1px solid $error - 10% 
			&--warning
				background-color $warning
				border 1px solid $warning
				&:focus
				&:active
				&:hover
					background-color $warning - 10%
					border 1px solid $warning - 10%
			&--success
				background-color $success
				border 1px solid $success
				&:focus
				&:active
				&:hover
					background-color $success - 10%
					border 1px solid $success - 10%
		&.btn-secondary
			background-color transparent !important
			border 1px solid $brand-secondary
			color $brand-secondary
			&:focus
			&:active
			&:hover
				background-color transparent !important
				border 1px solid $brand-secondary - 30%
				color $brand-secondary - 30%
