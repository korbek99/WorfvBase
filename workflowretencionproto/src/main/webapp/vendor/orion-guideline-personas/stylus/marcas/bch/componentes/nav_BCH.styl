.bch-empresas-nav
  background-color $corporative-light-grey
  border-top-color $corporative-blue-thin
  .nav-vtwo
    .nav-pills
      li
        a
          color #4a4a4a
      & > li > a:hover
      & > li:hover
      & > li:focus
      & > li:focus > a
      & > li:hover > a
        color $corporative-blue-thin
        background $default-color
      & > li
        border-left-color $grey-four
      .bch-nav-dropdown
        &:last-child
          border-right-color $grey-four
        .subitems-menu-container
          background $corporative-light-grey
          box-shadow 0px 2px 3px 0px rgba(50, 50, 50, 0.27)
          .cont-padres-links
            background $corporative-light-grey
            border-right-color $corporative-blue-thin
            li
              a
                border-left-color $corporative-light-grey
                &:hover
                &:focus
                  color $corporative-blue-thin
                  background $default-color
                  border-left-color $corporative-blue-thin
                  .ion-chevron-right
                    color $corporative-blue-thin 

          .cont-children-links
            background $default-color
            border-left-color $corporative-blue-thin
            li
              &:before
                color $grey-three
              a
                &:hover
                  color $corporative-blue-thin