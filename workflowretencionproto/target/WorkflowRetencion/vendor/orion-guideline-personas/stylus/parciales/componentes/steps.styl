.steps
	.step
		border-left-width 1px
		border-left-style solid
		padding 0 15px 15px 30px
		position relative
		clearfix()
		& > h3
		& > h2
			font-family $light
		h1,h3,h4,h5,h6
			margin-top 0
		h2
			font-size 16px
			line-height 35px
		&:before
			display block !important
			width 30px
			height 30px
			line-height 30px
			font-size 14px
			border-width 1px
			border-style solid
			content attr(data-step)
			text-align center
			position absolute
			top 0
			left -15px
			border-radius 50%
			font-family $light
		&.disabled
			user-select none
			&:after
				background rgba(255,255,255,.85)
				display block
				z-index 100
				width 100%
				top 0
				left -15px
				right 0
				bottom 0
				content ''
				position absolute

		&.done
			border-left-width 1px
			border-left-style solid
			&:before
				border-width 1px
				border-style solid
		&:last-child
			border none

.steps-horizontales-numerados
	counter-reset step
	&__step
		display inline-block
		counter-increment step
		h6
			display inline-block
			font-family $regular
			margin 0 10px 0 0
			line-height 1
			vertical-align middle
		&:before
			border-radius 50%
			border 1px solid $grey-three
			color $grey-three
			content counter(step)
			display inline-block
			font-size 14px
			font-family $light
			height 30px
			margin-right 5px
			line-height 28px
			text-align center
			vertical-align middle
			width 30px
		&--done
			&:before
				content "\f3fd"
				font-family 'Ionicons'
				font-size 30px
				line-height 30px