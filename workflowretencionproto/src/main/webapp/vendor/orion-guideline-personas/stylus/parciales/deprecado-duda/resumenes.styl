.caja-resumen-modelo-uno
    margin 0 0 30px
    padding 10px 0 20px
    border-bottom-width 4px
    border-bottom-style solid
    .ion-ios-help-outline
        font-size 16px
        color $grey-three
    .resumen-header
        margin-bottom 10px
        h3
            display inline-block
        h1
        h2
        h3
        h4
        h5
        h6
        p
            margin-bottom 0
    .resumen-body
        .caja-contenido
            .btn-more
                text-align center
                display block
                color $grey-one
                padding-right 20px
                .ion-ios-plus-empty
                  width 13px
                  height 13px
                  padding-top 1px
                  text-align center
                  border-radius 3px
                  margin-right 3px
            &:last-of-type
                padding-left 0
            & > div[class^="col-"] 
                background $default-color
            div
                div[class^="col-"]
                    padding 0
        .listado-border
            .col-lg-12
                padding-right 0
            ul
                border-left-width 1px
                border-left-style solid
                margin-bottom 0
                width 100%
                li
                    padding 10px
                    border-bottom-width 1px
                    border-bottom-style solid
                    &:before
                        font-family "Ionicons"
                        content "\f3d3"
                        float left
                        margin-right 5px
                    &:last-child
                        border-bottom none
                    &.sin-bullet
                        &:before
                            content ""
                    p
                        font-size 12px
                        display inline-block
                        margin-bottom 0
                    .valor
                        @media (min-width: $bp-tablet)
                           float inherit
                        @media (min-width: $bp-desktop)
                            float right
        .no-left-padding
            padding-left 0

