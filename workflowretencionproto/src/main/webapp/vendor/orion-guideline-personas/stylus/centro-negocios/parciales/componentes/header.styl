/* HEADER */
$header--height     = 60px
.centro-negocios
	.header
		.header__dropdown
			width 200px
			min-height 60px
			background $white
			display none
			position absolute
			right 0
			top $header--height
			flex-wrap wrap
			border 1px solid $grey-50
			p
				text-align left
				width 100%
			.arrow-box
				position absolute
				right 26px
				top 0
			.arrow-box:after 
			.arrow-box:before
				bottom 100%
				left 50%
				border solid transparent
				content ''
				height 0
				width 0
				position absolute
				pointer-events none
			.arrow-box:after
				border-bottom-color #FFFFFF
				border-width 6px
				margin-left -6px
			.arrow-box:before
				border-bottom-color $grey-50
				border-width 7px
				margin-left -7px
		// *::selection 
		// 	background-color transparent
		a
			transition all 0.2s ease
