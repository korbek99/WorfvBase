.footer-empresa
	background $corporative-light-grey
	padding 15px 0 20px
	position absolute
	bottom 0
	width 100%
	height auto
	min-height 140px
	.icon-logo-banco
		height 30px
		line-height 30px
		display block
		width 205px
		margin 40px 0 30px
		font-size 47px
		color $grey-two
		@media (min-width $bp-mobile) and (max-width: $bp-desktop)
			font-size 40px
			margin 38px 0 30px
	.col-lg-3
	.col-lg-5
		border-right solid 1px $grey-three
	a
		font-size 12px
		&:hover
			color $default-color
	.icon-share-outline
		&:before
			font-size 18px
	.dot
		display inline-block
	p
		width 94%
		vertical-align top
		display inline-block
		margin 0