@import 'variables.styl'
h3
	margin-bottom 15px
.cuadro-mail
	padding 0
	.select-mail
		display flex
		background $color-16
		padding 15px
		flex-direction row
		align-items flex-end
		.form-group
			margin-bottom 0px
	.descarga-comprobante
		margin-top 5px
		background $color-16
		padding-top 6px
		padding-bottom 6px
		display flex
		flex-direction row
		align-items center
		justify-content flex-end
		position relative
		.enlace
			display flex
			flex-direction row
			align-items center
			cursor pointer
			i
				color $color-6
				font-size 24px
				margin-right 10px
.tasa-info
	p
		background $color-16
		padding 15px
		position relative
		margin-bottom 0px
		margin-top 19px
		&:after
			right 100%
			top 50%
			border solid transparent
			content " "
			height 0
			width 0
			position absolute
			pointer-events none
			border-color rgba(238, 238, 241, 0)
			border-right-color $color-16
			border-width 7px
			margin-top -7px
.border-bottom-dashed
	border-bottom 1px dashed $color-13 !important
/* SCROLLBAR */
*
	&::-webkit-scrollbar
		background transparent !important
		background-color transparent !important
		border none !important
		height 8px !important
		cursor pointer !important
		right 0 !important
		width 8px !important
		transition all 0.3s ease-in-out !important

	&::-webkit-scrollbar-button
		display none !important
		transition all 0.3s ease-in-out !important

	&::-webkit-scrollbar-track
		background transparent !important
		border none !important
		box-shadow none !important
		transition all 0.3s ease-in-out !important

	&::-webkit-scrollbar-thumb
		background $color-13 !important
		border-radius 3px !important
		cursor pointer !important
		transition all 0.3s ease-in-out !important
		&:hover
			background $color-4 !important
		&:focus
			background $color-4 !important
		&:active
			background $color-4 !important
		&:window-inactive
			background $color-15 !important
/* SCROLLBAR */
.disabled
	user-select none
.clear
	clear both
	float none
.transition
	transition all linear .2s
.panel
	background $corporative-light-grey
	border-radius 0px
	box-shadow none
.caret
	border none
	font-family 'empresas-bch-icon'
	margin-right 10px
	margin-top -4px
	&:before 
		content "\e617"

.animate-fadeInRight
	&.ng-enter
		animation $right 0.3s linear
	&.ng-leave
		animation $left 0.3s linear
		
.prueba-sidebar
	&.ui-scrollfix
		position fixed
		top 15px
		width 262px
		
// clases de impersion
.block-print
	@media print
		width 100% !important
		display block !important
		

// CONTRASTE
.container-ajuste-contraste
	width 400px
	background #ffffff
	border-radius 3px
	box-shadow 0 1px 1px rgba(0,0,0,0.25)
	position fixed
	top 200px
	left 50%
	margin-left -200px
	padding 15px
	border 1px solid #d2d2d4
	display none
	z-index 9999
	p
		color #d2d2d4
	bchui-contrast
		margin 40px 0
		display block
		input[type=range]
			-webkit-appearance none
		input[type=range]:focus
			outline none
		input[type=range]::-webkit-slider-thumb
			background-color #fafafc
			background-image none
			border-color #d2d2d4
			box-shadow inset 0 5px 10px 0 #e6e6e6,0 1px 3px rgba(0,0,0,.2)
			padding 11px
			border-radius 50%
			-webkit-appearance none
			margin -9px 0 0 0px
			transition box-shadow .3s linear
			cursor pointer
			height 18px
			width 18px
			background #efefef
			border 1px solid #ccc
			&:hover
				box-shadow inset 0 5px 10px 0 #e6e6e6,0 0 10px 0 #c8c8c8
		input[type=range]:focus::-webkit-slider-runnable-track
			background #367ebd
		input[type=range]::-webkit-slider-runnable-track
			background-color #285b9b
			background-image linear-gradient(#5bc0de,#2f96b4)
			background-size 100%
			border-radius 4px
			width 100%
			height 8px