	/* PALETA COLORES NUEVOS EN WEBKIT */
	.pattern-colors
		color $grey-80
		font-family $regular
		font-size 18px
		ul
			padding 0px
			margin 15px 20px 10px 0px
			width 100px
			display inline-table
			li:first-child
				width 100px
				height 100px
				list-style none
				text-align center
				border 1px solid $gray-30
				border-radius 5px
			li:last-child
				width 100px
				height auto
				list-style none
				text-align center
				font-size 12px
				font-family $regular
				
	.colores-paleta
		display none
	#paleta
		cursor pointer