.bch-list-filters
	background-color $grey-four
	border-bottom 3px solid $grey-four
	clear both
	padding 10px 0 0
	margin-bottom 15px
	.form-group
		margin-bottom 0
		.form-control
			border-color $default-color
		p
			margin 0
	.filtro-datepicker
		.input-group-btn
			background-color $default-color
		.text-center
			> span
				margin-top 8px
				display inline-block
	.search-button
		font-size 18px
		padding 1px 12px
	.reset-filter
		border-left 1px solid $default-color
		button
			background-color transparent
			color $grey-two
			font-size 25px
			padding 0
	.btn
		opacity 1
		&.default
			color $grey-two
			height 30px
	.cont-filtro
		border-left 1px solid $default-color
		margin-bottom 10px
		&:first-child
			border none
		.ui-select-bootstrap
			.ui-select-toggle
				overflow hidden
				text-overflow ellipsis
			.ui-select-match
				span
					width 100%
	.filtros-extra
		> div
			background-color $grey-six
			padding-top 20px
			padding-bottom 20px
		.cont-filtro
			border none

	.mas-filtros
		color $grey-two
		display inline-block
		font 22px $light
		height 34px
		position relative
		text-decoration none
		width 20px
		span
			display none
			width 0
			height 0
			border-style solid
			border-width 0 10px 10px 10px
			border-color transparent transparent $grey-six transparent
			position absolute
			top 140%
			left 50%
			margin-left -10px
		&.active
			span
				display block
	.dropdown-menu
		min-width 247px
	
	.col-custom-1
		width 45%
		&:first-child
			margin-right 0

.col-custom-1
	width 45%
	float left

.col-custom-2
	width 10%
	float left	
		
.bch-selected-filters
	margin 15px 0
	p
		margin 4px 0 0

.action-bar-table
	border none
	border-radius 0px
	margin 0
	padding 0
	height 45px
	line-height 45px
	padding 0 15px !important
	border-bottom 3px solid $grey-four
	.resume
		p
			display inline-block
			vertical-align top
			line-height 45px
			margin 0 30px 0 0
	.filter-action
		border-left 1px solid $default-color
		border-right 1px solid $default-color
		max-height 42px
		button
			background $default-color
			color $grey-two
			font-style italic
			width 100%
			text-align center
			display inline-block
			&.lupa-sm
				margin 10px 0 10px 0
		&.active
			background $grey-four
	.contextual-action
		button
			&.default
				background transparent

.bch-filtros-empresas
	border-width 1px
	border-style solid
	.btn-search
		border-left-width 1px
		border-left-style solid
		border-radius 0
		height 50px
		width 50px
		i
			font-size 25px
	.limpiar
		a
			display inline-block
			margin-top 8px
			text-decoration underline
	.col-custom-2
		padding-top 8px
	.separacion
		margin-top 10px
	.form-group
		margin-bottom 0
		.form-control
			height 30px
			min-height 30px
		.input-group-btn 
			button
				height 30px !important
		p
			margin 0
			border-width 1px
			border-style solid
	.extendido
		border-top-width 1px
		border-top-style solid
		min-height 50px
		input
			border none
			box-shadow none
			margin-top 10px
			&:focus
				border none
				box-shadow none
		button
			border none
			i
				font-size 45px
				
.bch-filtros-personas
	.informacion
		p
			margin-top 16px
			font-size 15px
			span
				font-size 12px
	.botones-iconos
		display inline-block
		button
			border-radius 0
			margin 0
			height 50px
			width 50px
			opacity 1
			i
				font-size 20px
			&.active
				box-shadow none
				border none
				outline none
			&:focus
				box-shadow none
				border none
	.botones-acciones
		display inline-block
		margin-top 8px
		button
			font-size 12px
		.dropdown-toggle
			font-size 12px
			margin-right 0
	.col-custom-2
		padding-top 8px
	.form-group
		.form-control
			height 30px
			min-height 30px
		.input-group-btn 
			button
				height 30px !important
		p
			margin 0
			border-width 1px
			border-style solid
	.top-row
		padding-top 30px
	.botones-interiores
		padding 0 30px 20px
		button
			i
				margin-left 10px