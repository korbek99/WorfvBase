/* ESTILOS PARA LAS VISTAS DE CDP */
.centro-negocios
	&.cdp
		/* INPUT CON ICONO */
		.input-group-btn
			border 1px solid $grey-30
			padding 0
			button
				min-height 32px
		/* ACORDEON */
		.bch-empresas-acordeon
			.panel-group
				.panel
					padding-top 0px !important
					padding-bottom 0px !important					
		.bch-list-menu-acco
			.submenu-acco
				ul
					li
						a
							color $grey-50
							transition all 0.3s ease-in-out
							&:hover
								color $header-blue
							&:focus
								color $header-blue
						&.active
							a
								color $header-blue
		/* FIN ACORDEON */
		
		/* BOTONES */
		.btn-grup
			display inline-block
			margin-bottom 0 !important
			margin-right 0 !important
			margin 0px !impo
			font-weight normal
			text-align center
			vertical-align middle
			cursor pointer
			background-image none
			border 1px solid transparent
			white-space nowrap
			padding 6px 12px
			font-size 14px
			line-height 1.42857143
			border-radius 4px
			-webkit-user-select none
			-moz-user-select none
			-ms-user-select none
			user-select none
			color $grey-80 !important
			background-color $white !important
			border-color $grey-10 !important
			&:hover
			&:active
			&:focus
				opacity 1
				-ms-filter none
				filter none
				outline none
				color $white !important
				background-color $brand-primary !important	
		/* FIN BOTONES */
		
		/* BUSCADOR DATOS */
		.datos-res-buscador
			background $white
			padding 25px 20px
			border none
			.contenido-datos
				&.content-credi-datos
					h4.tituloDatos
						margin-top 5px
				&.content-client-datos
					ul
						li
							border-top none
							border-left none
							border-right none
							border-bottom none
							p
								float left
								&:last-child
									margin-left 20px
				h4.tituloDatos
					color $brand-secondary
					padding-top 5px
				ul
					background $white
					border 1px solid $grey-10	
					padding 0
					margin 0
					&:last-child
					li
						padding 9px 16px
						border 1px solid $grey-10
						&.tasaCre
							padding-right 24px
						&.lasUl
							p
								span
									float none
									padding-left 6%	
						i
							float left
							margin-right 15px
							padding-top 3px
						p
							margin 0
							span
								float right
								padding-right 11%
								color $grey-30
		/* FIN BUSCADOR DATOS */
			
		/* PAGINADOR */
		.bch-empresas-paginador
			padding 0
			p
				line-height 30px
			.pagination
				margin 0px
				li.disabled
					display none
					border-color transparent
				li a
					color $brand-secondary
					border-color transparent
				.active a
					background $brand-secondary
					color $white
					&:focus
						background $brand-secondary
					&:hover
						color $white
				.disabled a
					cursor default
				li:first-child > a, li:first-child > span
					border-radius 3px 0 0 3px
					color $brand-secondary
				li:last-child > a, li:last-child > span
					color $brand-secondary
				li 
					a
						&:focus
							background transparent
			.form-group 
				margin-bottom 0
				.ui-select-bootstrap 
					.btn-default
						border 1px solid $grey-80
						height 32px	
						min-width 60px
						radius(3px)		
						.caret
							margin-right 10px
							color $grey-80
			label
				margin-top 8px	
				text-align right
				padding-right 0px
				font-size 13px
				color $grey-80
				font-family $regular
		.form-group 
			.ui-select-bootstrap 
				.ui-select-match 
					span
						font-size 12px
		/* FIN PAGINADOR */
		
		/* TABLA DINAMICA */	
		.tabla-dinamica
			/* DROPDOWN COLUMNAS */
			.dropdown-btn
				border none
				background $brand-primary
				color white !important
				border-radius 3px
				transition all 0.3s ease-in-out
				opacity 0.8
				a
					background none !important
					color $white !important
					border none !important
					border-radius 3px !important
					opacity 1 !important
					transition all 0.3s ease-in-out
					span.ion-navicon
						font-size 15px
				&:hover
					opacity 1
			/* OPCIONES TABLA DINAMICA */
			.opciones-tabla
				.btn.default:focus
					background $brand-secondary !important
					color $white !important
				ul.opciones-columnas
					padding-left 15px
					padding-right 15px
					li
						.bch-custom-check
							font-size 0.8em
			/* TABLA CON SCROLL HORIZONTAL */
			.table-scroll
				width 100%
				overflow-x auto
				margin-bottom 10px
				border none
				.table
					margin-bottom 0
					thead
						.header-columnas
							th
								min-width 150px !important
								span
									margin-bottom 5px
								input
									width 100%
									padding 5px
									border-radius 3px
									border none
									color $grey-50
									background $white
									outline none
									font-family $regular
							td
								padding 10px 5px !important
								background $white
				&::-webkit-scrollbar
					height 6px
					background $grey-10

				&::-webkit-scrollbar-button
					width 8px
					height 5px
					display none

				&::-webkit-scrollbar-track
					background $grey-10
					border thin solid $grey-10
					box-shadow inset 0 0 6px rgba(0,0,0,0.2)
					//border-radius 2px

				&::-webkit-scrollbar-thumb
					background $brand-complementary
					border-radius 2px
					transition all 0.3s ease-in-out
					&:hover
						background $brand-secondary
					&:window-inactive
						background $grey-10
		/* FIN TABLA DINAMICA */
		
