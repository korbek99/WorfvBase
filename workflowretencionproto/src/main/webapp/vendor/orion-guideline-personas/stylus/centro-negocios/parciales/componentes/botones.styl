	.buttons__actions
		flex 1
		ul
			margin 0
			padding 0
			list-style none
			border 1px solid $grey-30
			border-radius 3px
			display inline-flex
			li
				float left
				border-right 1px solid $grey-30
				font-size 17px
				&--pdf
					font-size 14px
				a
					padding 7px 7px
					display inline-flex
					color $brand-primary
					&:hover
						color $brand-complementary
				&:last-child
					border-right none
					.popover
						background $black
						.arrow
							border-top-color $black
							&:after
								border-top-color $black
						.popover-content
							padding 0	
						.dropdown-copy
							ul
								list-style none
								border none
								border-radius 0
								display block
								text-align left
								li
									float none
									border none
									a
										color $white
										font-size 12px
										line-height 7px
										i
											margin-right 15px
	.button-ctn-icons
		display inline-block
		background transparent
		border-radius 50%
		transition all 0.3s ease-in-out
		width 30px
		height 30px
		text-align center
		line-height 27px
		border 1px solid $grey-50
		font-size 1em
		margin-right 5px
		i
			color $grey-50
			transition all 0.3s ease-in-out
			margin-left 0px !important
		&:hover
			background $brand-primary
			border 1px solid $brand-primary
			i
				color $white
		&.button-ctn-icons--right
			margin-right 9px
		&:focus
			background $brand-primary
			border 1px solid $brand-primary
			i
				color $white		
	.content-loader
		overflow hidden
		display inline-block
		border-radius 50%
		position relative
		z-index 2
		button
			&.button-loader--circle
				border-radius 50%
				line-height 2.5
				padding 0 8px
				overflow hidden
			&.button-loader--circle-default
				border-radius 50%
				line-height 2.5
				padding 0 8px
				overflow hidden
