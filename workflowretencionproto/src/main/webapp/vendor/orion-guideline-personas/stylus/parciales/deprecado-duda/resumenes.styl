.caja-resumen-modelo-dos
    @extend .caja-resumen-modelo-tres
    .resumen-body
        .row
            & > div
                padding-top 10px
                padding-bottom 10px
                display table
                & > div
                    float none
                    display table-cell
                    vertical-align top
                    border-right-width 1px
                    border-right-style solid

.caja-resumen-modelo-cuatro
    @extend .caja-resumen-modelo-uno

    .resumen-body
        .caja-contenido
            &:first-child
                padding-right 0
            &:last-of-type
                & > div
                    padding-left 0
                    &:first-child
                        & > div
                            &:first-child
                                padding-right 5px
        .border-inverse
            ul
                border-right-width 1px
                border-right-style solid