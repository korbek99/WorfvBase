.bch-bubble
	background-color $grey-six
	border 1px solid $grey-five
	border-radius 5px
	font-size 12px
	padding-top 10px
	padding-bottom 10px
	position relative
	&:before
		content ""
		width: 0
		height: 0
		border-style solid
		border-width 10px 10px 10px 0
		border-color transparent $grey-six transparent transparent
		position absolute
		top 33px
		left -10px
		z-index 2
	&:after
		content ""
		width 0
		height 0
		border-style solid
		border-width 12px 12px 12px 0
		border-color transparent $grey-five transparent transparent
		position absolute
		top 31px
		left -12px
		z-index 1
	.bch-alert-lista
		&.info-list
			> ul
				background-color transparent
				padding 0 0 0 30px
				li
					&:before
						top 8px
	&.no-triangle
		&:before
			display none
		&:after
			display none