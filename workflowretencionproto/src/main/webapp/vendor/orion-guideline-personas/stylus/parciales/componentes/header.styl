.bch-empresa-header
	height 106px
	transition all ease .3s
	.logo-header
		.icon-logo-banco
			display block
			font-size 50px
			margin-top 29px
			&:focus
				text-decoration none
			@media (min-width $bp-mobile) and (max-width: $bp-desktop)
				font-size 40px
				margin-top 35px
	.selector-header
		transition all ease 0.3s
		padding 39px 0 0
		.caja-boton
			width 100%
			.btn-default
				text-align left
				font-size 11.5px
				overflow hidden
				min-height 30px
				transition all ease 0.3s
				width 100%
				opacity 1.0
				&:focus
					background $default-color
					color $grey-one
			.icono-menu-selector
				font-size 20px
				content "\f20e"
				position absolute
				right -1px
				width 33px
				height 32px
				text-align center
				color $default-color
				padding 0
				margin-top -6px
				line-height 29px
		.una-empresa
			cursor auto
			text-align center
			&:hover
				background $default-color
				color $corporative-grey

	.profile-header
		transition all ease 0.3s
		height 106px
		padding 30px 0 0
		.contenedor-foto
			padding 0 8px
			img
				margin -5px auto 0 auto
				transition all ease .3s
		.contenedor-texto-profile
			padding 2px 0 0
			transition all ease .3s
			.name
				color $default-color
				margin 0
				display block
				font-size 15px
			.link-profile
				display inline
				font-size 12px
				display inline-block
				&:hover 
					color $default-color

.modal-danger
.modal-warning
	.modal-timer-out
		width auto
		height auto
		max-width 480px
		padding 15px 17px 20px 17px
		margin 0 auto
		overflow hidden
		.modal-body-img
			width 100%
			text-align center
			span
					font-size 112px
					line-height 100px     
		.modal-body-text
				text-align center
				h3
						font-size 22px
						color $grey-one
				p
						font-size 14px
						color $grey-one
		.boton-modal
				width 100%
				text-align center
				display block
				overflow hidden
				&.entero
						width 100%
						margin 30px auto 10px
				&.medio
						width 50%
						float left
						margin 20px auto 10px

	.modal-dialog
		.modal-content
			width 100%
			margin 30px auto
			border-radius 5px
			overflow hidden