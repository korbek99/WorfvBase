//Steps Horizontales

.steps-horizontales
	position relative
	.step
		i
			border-radius 50%
			width 50px
			height 50px
			border-width 1px
			border-style solid
			text-align center
			padding 5px 0 0 4px
			font-size 40px
			z-index 10
			position relative
			margin-bottom 10px
		&:after
			width 100%
			height 1px
			border-top-width 1px
			border-top-style solid
			margin-top 26px
			content ''
			display inline-block
			position absolute
			top 0
			left 50%
			z-index 1
		&.active
			&:after
				@extends .steps-horizontales .step:after
		&:last-child
			&:after
				border none !important
		&.done
			&:after
				@extends .steps-horizontales .step:after
		p
			margin-bottom 0