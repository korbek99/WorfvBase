@import '../../../vendor/orion-guideline-personas/stylus/parciales/variables.styl'
@import 'nib'

.transition-min-height
  min-height 550px

.contenedor-transition-detail-directive
  &:first-child
    transition height 0.5s ease-in-out
  .breadDetalle
    background-color $grey-four
  .breadAnimacion
    tr
      transition all 0.5s linear
  .mover-izquierda
    animation mover-izquierda 0.7s
    animation-timing-function ease-in-out
    position absolute
    height 450px
    overflow hidden
    margin-left -100%
    &:after
      position absolute
      display block
      width 100%
      z-index 100
      top 0
      right 0
      bottom 0
      content ''
      background linear-gradient(to bottom,  rgba(255,255,255,0) 0%,rgba(255,255,255,1) 85%); 

  .contenedor-detalle
    opacity 0
    position absolute
    .row
      position relative

  .mover-detalle
    animation mover-detalle 0.7s
    animation-timing-function ease-in-out
    position absolute
    opacity 1
    right 0px
    
  .mover-izquierda-volver
    animation mover-izquierda-volver 0.7s
    animation-timing-function ease-in-out
    opacity 1
    margin-left 0
    &:after
      content initial

  .mover-detalle-volver
    display none

  .boton-volver
    position absolute
    &.ui-scrollfix
      position fixed
      top 45px
    .linea
      &:after
        position absolute
        width 1px
        background-color #CFCFD2
        height 400px
        top 0
        left 25px
        content ''
    i 
      color $default-color
      height 25px
      width 25px
      background $color-6
      border solid 1px $color-6
      padding-top 3px
      text-align center
      border-radius 50%
      position absolute
      top 185px
      z-index 1
      margin-left 13px
    &:hover
      border-color #002058
    @media (max-width $bp-desktop)
      position relative
      top inherit
      left inherit
      display inline-block
      margin-bottom 20px
      margin-left -15px
      &.ui-scrollfix
        position relative
        left inherit
        top inherit
      .linea
        &:after
          content initial
      i
        position relative
        top inherit
        vertical-align middle
        margin-right 7px
        width 25px
        height 25px
        font-size 18px!important
        padding-top 4px
        display inline-block
      h6
        display inline-block
        vertical-align middle
        margin-bottom 0
        text-decoration underline

  @keyframes mover-izquierda {
    0% {
      opacity: 1
      margin-left: 0
    }
    100% {
      opacity: 0.4
      margin-left: -100%
    }
  }
  @keyframes mover-izquierda-volver {
    0% {
      opacity: 0.4
      margin-left: -100%
    }
    100% {
      opacity: 1
      margin-left: 0
    }
  }
  @keyframes mover-detalle {
    0% {
      opacity: 0
      right: -100%
    }
    100% {
      opacity: 1
      right: 0
    }
  }
