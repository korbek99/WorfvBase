.tooltip
	background-color transparent
	color $default-color
	font 12px $regular
	line-height 1
	box-shadow none
	padding 0 !important
	opacity 1 !important
	@media print
		display none !important
	.tooltip-inner
		background-color $grey-one
		border-radius 3px
		border none !important
		padding 10px 15px
		max-width 200px
		line-height 15px
	.tooltip-arrow
		border-width 7px !important
		&:after
			position absolute
			display block
			width 0
			height 0
			border-color transparent
			border-style solid
			border-width 10px
			content ""
	&.bottom
		margin-top 10px !important
		.tooltip-arrow
			top -14px
			margin-left -7px
			border-bottom-color $grey-four
			border-top-width 0
			&:after
				content " "
				top 1px
				border-top-width 0
				border-bottom-color $grey-one
				margin-left -10px
	&.right
		margin-left 10px
		.tooltip-arrow
			top 50%
			margin-top -7px
			left -14px
			border-right-color $grey-four
			border-left-width 0
			&:after
				content " "
				left 1px
				bottom -10px
				border-left-width 0
				border-right-color $grey-one
	&.top
		margin-top -13px
		.tooltip-arrow
			bottom -13px
			margin-left -7px
			border-top-color $grey-four
			left 50%
			border-bottom-width 0
			&:after
				content " "
				bottom 1px
				margin-left -10px
				border-bottom-width 0
				border-top-color $grey-one
	&.left
		margin-left -10px
		.tooltip-arrow
			top 50%
			margin-top -6px
			right -14px
			border-left-color $grey-four
			border-right-width 0
			&:after
				content " "
				right 1px
				bottom -10px
				border-right-width 0
				border-left-color $grey-one
				
.help-icon
	font-size 18px !important
	color $grey-two !important
	opacity .7
	transition all .2s linear
	&:hover
		opacity 1
		color $grey-two !important