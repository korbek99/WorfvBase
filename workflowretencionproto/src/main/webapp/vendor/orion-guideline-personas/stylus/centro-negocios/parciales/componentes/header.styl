		.header__nav-secondary
			padding 0 15px
			a
				padding 0 10px
				line-height $header--height
				height $header--height
				font-size 1.8em
				color $grey-50
				display block
				position relative
				float left
				.open-box-over
					cursor pointer
					&:hover 
						color $brand-primary
			.header__indicator 
				font-size 1em 
				.header__dropdown
					padding 15px 15px 5px 15px
					ul
						padding 0
					li 
						list-style none
						float left
						border-bottom 1px dotted $grey-10
						line-height 30px
						width 100%
						color $grey-80
					.bch-mensaje-empresas
						&.error
							article.indicadores
								padding-left 14px
								p
									text-indent 15px
									border none !important
									font-size 11px
							article.indicadores:before
								color $error
								float left
								position relative
								margin-left -23px
								font-size 22px
								width auto
								line-height 43px
				.header__date 
					font-size 1em 
					font-style italic
					color $grey-50 !important
					font-size 0.9em
					border-bottom none !important
			.arrow-box
				right 16px !important
		.box-user
			height $header--height
			cursor pointer
			margin 0 15px 0 0
			figure
				width 40px
				height 40px
				line-height 40px
				background $brand-complementary
				border-radius 50%
				text-align center
				color $white
				overflow hidden
			.header__dropdown
				flex-wrap wrap
				right 5px
				padding 15px
				h6 
					font-size 1.2em
					margin 0
				button 
					margin 15px 0 0 0
		.header__dropdown-trigger
			position relative
			cursor pointer
			&:hover
				color $brand-primary
		.active
			.header__dropdown
				display flex
				align-items stretch
				div 
					flex 1
					display flex
					text-align center
					font-size 0.5em
					padding 10px 0 0 0
					cursor pointer
					transition all 0.3s ease
					i
						font-size 3em 
					&:hover
						color $brand-primary