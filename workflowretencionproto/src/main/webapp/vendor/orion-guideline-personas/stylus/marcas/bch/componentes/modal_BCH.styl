.modal-content
	box-shadow none
	border-radius 0
	.modal-header
		background $corporative-light-grey
		border none
		position relative
		.modal-title
			color $grey-one
		.close-modal
			position absolute
			top 0
			right 0px
			width 40px
			bottom 0px
			opacity 1 !important
			border-radius 0
			background $grey-three
			color $grey-one
			font-size 25px
			padding 0
			&:hover
				background $grey-one
				color $default-color
		&.outside
			.close-modal
				position absolute
				right -40px
				margin 0
			.modal-actions
				position absolute
				right -40px
				top 100%
				div.action-icon
					width 40px
					height 40px
					display block
					background $grey-five
					text-align center
					font-size 23px
					line-height 40px
					transition all ease .2s
					cursor pointer
					position relative
					.badge
						position absolute
						top 5px
						right 4px
						font-size 10px
						padding 4px
					&:hover
						background $grey-four
					&.delete
						&:hover
							background $danger-color
							color $default-color
	.modal-footer
		border none
		clear both

// Tabla Detalle Modal
.modal-detalle
	&.in
		.modal-dialog  
			background $default-color
			.modal-content
				.action-box
					background $grey-five
					color $grey-one
					box-shadow -6px -30px 50px 0px $default-color
					.button-toggle
						color $default-color
						background $grey-two
						&:hover
							background $success-color

				.modal-header
					background-color $color-3
					color $default-color
					h3
						color $default-color
					.close-modal
						background-color $color-3
						color $default-color
						&:hover
							background-color $color-3
					.dropdown-descarga
						border-right-color $default-color
						.boton-descarga-documentos
							color $default-color !important