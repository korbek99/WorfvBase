.bch-empresas-acordeon
	.panel-group
		border-radius 0
		.panel
			box-shadow 0 0 0 $default-color
			margin-top 0
			margin-bottom 1px
			border none
			overflow initial
			padding 0
			.panel-heading
				background-color $color-16 !important
				border none !important
				height 47px
				padding 15px 15px 0
				transition all 0.3s ease-in-out
				h4
					color $color-11
					font-size 14px
				a
					cursor pointer
					display block
					text-decoration none
					background-color $color-16 !important
					color $color-4 !important
					font-size 14px !important
					font-family $regular
					transition all 0.3s ease-in-out
					&:hover
						background-color $color-3 !important
						color $default-color !important
					
			.panel-body
				border none
				padding none
				background $color-16
	&.bch-acordeon-active
		.panel-group
			.panel-heading
				padding 0
				height auto
				div
					height 47px
					padding 15px 15px 0
					&.active
						background-color $color-3 !important
						animacion(0.1s)
				a
					transition all 0.3s ease-in-out
					background $color-15
					&:hover
						background $color-14

	.tit-filtros
		border none
		display block
		padding 13px 15px
		margin 0
		min-height 45px

.bch-list-menu-acco
	.panel-group
		margin-bottom 0
		.panel
			.panel-heading
				border-color $color-14
			.panel-body
				background-color $default-color
				padding 0 !important
			&:first-child
				.panel-heading
					border-top none

	.submenu-acco
		font 14px $light
		ul
			list-style none
			margin 0
			padding 0 !important
			li
				border-bottom 1px solid $color-13
				height 40px
				display flex
				flex-direction row
				align-items center
				padding-left 15px
				padding-right 15px
				a
					display inline-block
					&:after
						bottom 0
					&:hover
						a:after
							bottom 0
				&.active
					a
						color $color-12
				&:last-child
					border-bottom none