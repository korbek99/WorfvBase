.bch-file-upload-diretive
  border-radius 0
  padding 20px
  border-width 0
  .upload-box
    background #fff
    padding 15px 0 5px
    text-align center
    margin-bottom 10px
    border dashed 2px #d2d2d4
    transition all .2s ease-in-out
    & > i
      font-size 50px
      color  #d2d2d4
      transition all .1s ease-in-out
    h5
      margin-bottom 2px
      font-family $regular
    & + .btn-block
      margin-left 0
    &:hover
      border dashed 2px #149dc9
      cursor pointer
      & > i
        color #149dc9 
        margin -5px 0 5px
      
  .dragover
    .upload-box
      border dashed 2px #149dc9
      cursor pointer
      & > i
        color #149dc9 
        margin -5px 0 5px
  .dragover-err
    .upload-box
      //border dashed 2px $alert-error
      cursor pointer
      & > i
        //color $alert-error
        margin -5px 0 5px
  .form-group
    margin-bottom 0 !important
  .btn
    opacity .8
    transition all ease .2s
    outline 0
    cursor pointer
    font-family $regular
    margin 0 7px
  .info
    background #3e8f58
    color #fff