.btn
	border-radius 2px
	transition all .2s ease-in-out
	outline none
	cursor pointer
	font-family $light
	margin 0 7px
	padding-left 12px
	padding-right 12px
	opacity 1
	outline none !important
	&.primary
		background $color-3
		color $default-color
		transition all .2s ease-in-out
		&:hover
			background $color-2
			color $default-color
		&:focus
		&:active
			outline none
			background $color-3
			color $default-color
	&.info
		background $color-6
		color $default-color
		transition all .2s ease-in-out
		&:hover
			background $color-5
			color $default-color
		&:focus
		&:active
			outline none
			background $color-6
			color $default-color
	&.danger
		background $color-21
		color $default-color
		transition all .2s ease-in-out
		&:hover
			background $color-26
			color $default-color
		&:focus
		&:active
			outline none
			background $color-21
			color $default-color
	&.success
		background $color-19
		color $default-color
		transition all .2s ease-in-out
		&:hover
			background $color-18
			color $default-color
		&:focus
		&:active
			outline none
			background $color-19
			color $default-color
	&.default
		background $default-color
		color $color-4
		border 1px solid $color-13
		transition all .2s ease-in-out
		&:hover
			background $default-color
			border 1px solid $color-11
			color $color-3
		&:focus
		&:active
			outline none
			background $default-color
			border 1px solid $color-13
			color $color-3
	&.neutro
		background $color-16
		color $color-12
		border 1px solid $color-13 !important
		transition all .2s ease-in-out
		&:hover
			background $color-14
			border 1px solid $color-13
			color $color-12
		&:focus
		&:active
			outline none
			background $color-16
			border 1px solid $color-13
			color $color-12
	&.btn-link
		text-decoration none
		color $color-6
		padding-left 0 !important
		padding-right 0 !important
		transition all .2s ease-in-out
		position relative
		&:after
			content ''
			position absolute
			width 100%
			height 1px
			background $color-6
			left 0%
			bottom 9px
			transition all 0.2s ease-in-out
		&:hover
			color $color-5
			text-decoration none
			&:after
				content ''
				position absolute
				width 0%
				height 1px
				background $color-5
				left 50%
				bottom 9px
	&:first-child
		margin-left 0
	&:last-child
		margin-right 0
	i
		font-size 16px
		margin-right 5px
		vertical-align middle
		&.ion-ios-download-outline
			vertical-align initial
.ui-select-bootstrap
	.btn-default
		background $default-color
		.caret
			margin-top -15px
		span
			color $color-11
			&:hover
				opacity 1
				color $color-11
.dropdown-toggle
	.caret
		margin-top -20px
		position relative
		&:before
