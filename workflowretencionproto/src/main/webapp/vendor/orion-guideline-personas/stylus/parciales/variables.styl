//FIN CENTRO DE NEGOCIOS EQUIVALENCIAS

$animation = slide
@keyframes {$animation}
    0%
        top 0
    50%
        top -180px
    100%
        margin-top 200

$right = slideRight
@keyframes {$right}
    0%
        opacity 0
        transform translate3d(100%, 0, 0)
    100%
        opacity 1
        transform none

$left = slideLeft
@keyframes {$left}
    0%
        opacity 1
        transform none
    100%
        opacity 1
        transform translate3d(100%, 0, 0)

animacion(n)
  -webkit-transition all n ease-in-out
  -moz-transition all n ease-in-out
  -o-transition all n ease-in-out
  transition all n ease-in-out